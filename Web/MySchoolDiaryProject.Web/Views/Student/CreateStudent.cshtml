@model MySchoolDiaryProject.Web.ViewModels.Student.CreateStudentInputViewModel

@{
    ViewData["Title"] = "Register a new student";
    var courses = @Model.Courses.Select(x => new SelectListItem(x.Name, x.Id.ToString()));
}

<body class="pictureBookThemeTeachers">
    <h1 style="color:ghostwhite;">@ViewData["Title"]</h1>

    <hr />
    <div class="row">
        @*<div class="col-md-4">*@
        <div class="col-md-6">
            <form enctype="multipart/form-data" asp-action="CreateStudent">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label" style="color:ghostwhite;"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MiddleName" class="control-label" style="color:ghostwhite;">Middle Name</label>
                    <input asp-for="MiddleName" class="form-control" />
                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label" style="color:ghostwhite;">Last Name</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BirthDate" class="control-label" style="color:ghostwhite;">Birthday</label>
                    <input asp-for="BirthDate" type="date" class="form-control"/>
                    <span asp-validation-for="BirthDate" class="text-danger" ></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label" style="color:ghostwhite;"></label>
                    <select asp-for="Gender" class="form-control">
                        <option value="female">female</option>
                        <option value="male">male</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label" style="color:ghostwhite;"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label" style="color:ghostwhite;"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CourseId" class="control-label" style="color:ghostwhite;">Course</label>
                    <select asp-for="CourseId" asp-items="courses" class="form-control"></select>
                    <span asp-validation-for="CourseId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photo" class="control-label" style="color:ghostwhite;"></label>
                    <div>
                        <div class="custom-file">
                            <input asp-for="Photo" class="form-control custom-file-input" style="opacity:1;" />
                            <label class="custom-file-label" style="opacity:1;">Choose File...</label>
                        </div>
                    </div>
                </div>
                @*<div class="form-group row">
                        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <div class="custom-file">
                                <input asp-for="Photo" class="form-control custom-file-input" style="opacity:1;" />
                                <label class="custom-file-label" style="opacity:1;">Choose File...</label>
                            </div>
                        </div>
                    </div>*@
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
        @*@section Scripts{
                <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change", function () {
                            var fileName = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(fileName);
                        });
                </script>
            }*@
    </div>

    <div>
        @*<a asp-action="Index">Back to List</a>*@
    </div>
</body>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

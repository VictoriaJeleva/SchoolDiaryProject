@model MySchoolDiaryProject.Web.ViewModels.Student.AllInfoAboutStudentViewModel

@{
    ViewData["Title"] = $"Update student {Model.Name} {Model.MiddleName} {Model.LastName}'s information";
    var courses = @Model.Courses.Select(x => new SelectListItem(x.Name, x.Id.ToString()));
    var photoPath = "~/css/StudentImages/" + (Model.PhotoPath ?? "noimage.jpg");
}

<body class="pictureBookThemeTeachers">
    <h1 style="color:ghostwhite;">@ViewData["Title"]</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">

            <div>
                <h1>
                    <a class="btn btn-danger btn-lg" asp-action="Delete" asp-controller="Student" asp-route-id="@Model.Id">Delete this student</a>
                </h1>
            </div>

            <div>
                <img class="studentPic" style="border:solid black;" src="@photoPath" asp-append-version="true" />
            </div>

            <form enctype="multipart/form-data" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label" style="color:ghostwhite;"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MiddleName" class="control-label" style="color:ghostwhite;">Middle Name</label>
                    <input asp-for="MiddleName" class="form-control" />
                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label" style="color:ghostwhite;">Last Name</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BirthDate" class="control-label" style="color:ghostwhite;">Birthday</label>
                    <input asp-for="BirthDate" type="date" class="form-control" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label" style="color:ghostwhite;"></label>
                    <select asp-for="Gender" class="form-control">
                        <option value="female">female</option>
                        <option value="male">male</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label" style="color:ghostwhite;"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label" style="color:ghostwhite;"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CourseId" class="control-label" style="color:ghostwhite;">Course</label>
                    <select asp-for="CourseId" asp-items="courses" class="form-control"></select>
                    <span asp-validation-for="CourseId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photo" class="control-label" style="color:ghostwhite;"></label>
                    <div>
                        <div class="custom-file">
                            <input asp-for="Photo" class="form-control custom-file-input" style="opacity:1;" />
                            <label class="custom-file-label" style="opacity:1;">Choose File...</label>
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                @*<div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                </label>
            </div>*@
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        @*<a asp-action="Index">Back to List</a>*@
    </div>
</body>

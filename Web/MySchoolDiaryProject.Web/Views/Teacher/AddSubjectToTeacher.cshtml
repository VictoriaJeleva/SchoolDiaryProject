@model MySchoolDiaryProject.Web.ViewModels.Subjects.AddSubjectToTeacherViewModel

@{
    ViewData["Title"] = $"Add a subject to teacher";
    var subjects = @Model.Subjects.Select(x => new SelectListItem(x.Name, x.Id.ToString()));
}

    <body class="pictureBookThemeTeachers">
        <h1 style="color:ghostwhite;">@ViewData["Title"]</h1>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="AddSubjectToTeacher">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Id" class="control-label" style="color:ghostwhite;">Subjects</label>
                        <select asp-for="Id" asp-items="subjects" class="form-control"></select>
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            @*<a asp-action="Index">Back to List</a>*@
        </div>
    </body>

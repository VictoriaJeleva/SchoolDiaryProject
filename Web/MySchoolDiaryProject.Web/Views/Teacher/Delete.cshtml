@model MySchoolDiaryProject.Web.ViewModels.Teachers.DeleteChangeClassTeacherViewModel

@{
    ViewData["Title"] = "Are you sure you want to delete this teacher?";
    var teachers = @Model.Teachers.Select(x => new SelectListItem(x.Name + " " + x.MiddleName + " " + x.LastName, x.Id.ToString()));
    string boxType = "biggerBox";
    System.Text.StringBuilder sb = new System.Text.StringBuilder();

    foreach(var item in Model.Courses)
    {
        if (Model.Courses.Count() == 1)
        {
            sb.Append(item.Name);
        }
        else if (Model.Courses.Count() > 1)
        {
            sb.Append(item.Name);
            sb.Append(" ");
        }
    }

    if (Model.Course == null)
    {
        boxType = "box";
    }
}

<body class="deleteTheme">

    <h1>@ViewData["Title"]</h1>
    <div class="boxt row @boxType" style="color:black;">
        <div class="col-md-4">
            <form asp-action="Delete">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (Model.Course != null)
                {
                    <div class="form-group" style="color:black;">
                        <label asp-for="TeacherId" class="control-label" style="color:black;">
                            Choose a new class teacher for course @sb.ToString()
                        </label>
                        <select asp-for="TeacherId" asp-items="teachers" class="form-control"></select>
                        <span asp-validation-for="TeacherId" class="text-danger"></span>
                    </div>
                }

                <div class="form-group" style="color:black;">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group" style="color:black;">
                    <label asp-for="MiddleName" class="control-label">Middle Name</label>
                    <input asp-for="MiddleName" class="form-control" readonly/>
                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                </div>
                <div class="form-group" style="color:black;">
                    <label asp-for="LastName" class="control-label">Last Name</label>
                    <input asp-for="LastName" class="form-control" readonly/>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>
    </div>
</body>


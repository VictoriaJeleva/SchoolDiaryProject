@model MySchoolDiaryProject.Web.ViewModels.Subjects.SubjectInfoViewModel

@{
    ViewData["Title"] = "Edit subject's name";
}

<body class="pictureBookThemeTeachers">
    <h1 style="color:ghostwhite;">@ViewData["Title"]</h1>

    <div>
        <h1>
            <a class="btn btn-danger btn-lg" asp-action="Delete" asp-controller="Subject" asp-route-id="@Model.Id">Delete this subject</a>
        </h1>
    </div>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label" style="color:ghostwhite;"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        @*<a asp-action="Index">Back to List</a>*@
    </div>
</body>

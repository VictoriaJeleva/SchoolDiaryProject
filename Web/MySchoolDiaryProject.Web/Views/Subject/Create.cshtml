@model MySchoolDiaryProject.Web.ViewModels.Subjects.CreateSubjectInputViewModel

@{
    ViewData["Title"] = "Create a subject";
}

<body class="pictureBookThemeTeachers">

    <h1 style="color:ghostwhite;">@ViewData["Title"]</h1>

    <hr />
    <div class="row" style="color:ghostwhite;">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</body>
